page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
  background: rgb(0, 0, 0ï¼Œ 0.3);
}

.map-container {
  width: 100%;
  height: 40vh;
}

.page-container {
  display: block;
  padding: 24rpx;
}

.service-item {
  height: auto;
}

.service-item-header .img {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
}

.service-item-header .video {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
}

.service-item .name {
  font-size: 1.125rem;
  display: flex;
  align-items: center;
}

.wxapp {
  height: 40rpx;
  width: 40rpx;
}

.service-item .address {
  margin-top: 16rpx;
  font-size: small;
  color: rgba(0, 0, 0, 0.54);
  display: flex;
  justify-content: space-between;
  overflow-wrap: anywhere;
  gap: 16rpx;
}

.service-item .address .navigation {
  height: 40rpx;
  width: 40rpx;
  margin-top: -8rpx;
  margin-left: 8rpx;
  text-align: right;
  vertical-align: middle;
}

.service-item .expense {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
  padding: 6rpx 12rpx;
  font-size: small;
  color: #e0620d;
}

.service-item .wxapp {
  font-size: small;
  color: rgba(0, 0, 0, 0.8);
}

.service-item .introduction {
  margin-top: 16rpx;
  padding: 24rpx;
  line-height: 1.5;
  font-size: small;
  color: rgba(0, 0, 0, 0.8);
  min-height: 200rpx;
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, 0.04);
}