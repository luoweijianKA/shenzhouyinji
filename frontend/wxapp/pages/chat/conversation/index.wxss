page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 192rpx);
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-wrapper,
.badge-wrapper {
  margin: 0 !important;
}

.t-cell__title-text {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.4);
}

.t-cell__description-text {
  font-size: medium;
  color: rgba(0, 0, 0, 0.87);
  background-color: #f5f5f5;
  padding: 24rpx;
  border-radius: 20rpx;
  border-top-left-radius: 0;
  line-height: 1.5;
}

.right .t-cell__title-text {
  justify-content: flex-end;
}

.right .t-cell__description-text {
  border-top-left-radius: 20rpx !important;
  border-top-right-radius: 0 !important;
}

.conversation-box {
  position: fixed;
  bottom: 0;
  background-color: #f5f5f5;
  min-height: 192rpx;
  width: 100%;
}

.conversation-box .form-control {
  margin-bottom: 48rpx;
}

.conversation-box .form-control .t-input {
  margin: 24rpx;
  border-radius: 20rpx;
}