.item {
  position: relative;
  display: flex;
  align-items: center;
  width: 706rpx;
  height: 200rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background-color: #fff;
}
.item-expired {
  opacity: 0.5;
}
.type {
  height: 40rpx;
  position: absolute;
  left: 0;
  top: 0;
  padding: 0 20rpx;
  color: #fff;
  font-size: 24rpx;
  line-height: 40rpx;
  border-radius: 20rpx 0;
  background: linear-gradient(90deg, #fcb468 0%, #ffb623 128%);
}
.status {
  height: 44rpx;
  position: absolute;
  right: 0;
  top: 0;
  padding: 0 16rpx;
  line-height: 44rpx;
  border-radius: 0 20rpx;
  color: #fff;
  background: #02e25c;
}
.left {
  flex: 0 0 200rpx;
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
  color: #fff;
  background: linear-gradient(90deg, #fc6868 0%, #ff2323 128%);
}
.left-deduction {
  background: linear-gradient(90deg, #68a3fc 0%, #0077ff 128%);
}
.title {
  font-size: 48rpx;
  line-height: 56rpx;
}
.title-unit {
  font-size: 36rpx;
}
.subtitle {
  font-size: 24rpx;
  line-height: 28rpx;
}
.right {
  position: relative;
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  padding: 0 32rpx;
}
.right-text {
  flex: 1;
  width: 0;
}
.rule {
  color: #333;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 28rpx;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.validate {
  padding-top: 24rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: normal;
  line-height: 28rpx;
}
.qrcode {
  width: 98rpx;
  height: 98rpx;
  padding: 6rpx;
  box-sizing: border-box;
  border: 2rpx solid #a8d1ff;
}
.qrcode-image {
  width: 100%;
  height: 100%;
}
.scope {
  position: absolute;
  right: 32rpx;
  bottom: 12rpx;
  color: #666;
  font-size: 24rpx;
  line-height: 28rpx;
}
