page {
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  gap: 24rpx;
  height: 50vh;
}

.logo {
  height: 96rpx;
}

.block {
  background: #fff;
  color: #333;
  padding: 24rpx;
  padding-bottom: 48rpx;
}

.block-bottom {
  height: auto;
}

.brand {
  margin-top: 32rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
}

.brand-logo {
  width: 96rpx;
  height: 96rpx;
  overflow: hidden;
}

.brand-name {
  margin-left: 16rpx;
  font-size: small;
}

.popup-tip {
  font-size: small;
}

.edit-avatar {
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #ccc;
}

.edit-avatar-right {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.edit-avatar .title {
  font-size: small;
  color: #ccc;
}

.edit-avatar-right .avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  overflow: hidden;
}

.edit-avatar-right .icon-btn {
  margin-left: 16rpx;
  color: #ccc;
}

.edit-avatar-right .t-button {
  border: none;
}

.edit-avatar-right .t-icon-chevron-right {
  color: #ccc;
}

.edit-name {
  height: 120rpx;
  border-bottom: 2rpx solid #ccc;
}

.edit-name .title {
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  font-size: small;
  color: #ccc;
}


.input-placeholder {
  color: #ccc;
  font-size: small;
}

.button-group {
  margin: 56rpx 0;
  justify-content: center;
}

.btn-cancel .t-button--text {
  width: 100%;
  color: #333;
  font-size: small;
  text-decoration: underline;
}

.btn-save {
  background-color: #4286F3;
  border: #4286F3;
  font-size: small;
  color: #fff;
  padding: 8rpx;
}

.note {
  margin-top: 16rpx;
  color: red;
  font-size: small;
}