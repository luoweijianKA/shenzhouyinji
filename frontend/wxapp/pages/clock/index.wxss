page {
  box-sizing: border-box;
  background-color: rgb(0, 0, 0, 0.035);
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
}

.map-container {
  width: 100%;
  height: 40vh;
}

.page-container {
  background: #fff;
  display: block;
  margin: 24rpx;
  color: rgb(0, 0, 0, 0.87);
  transition: box-shadow 300ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
  border-radius: 20rpx;
  box-shadow: none;
  overflow: hidden;
}

.service-item {
  height: auto;
}

.service-item-header .img {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
}

.service-item-content {
  padding: 24rpx;
}

.service-item .name {
  padding: 6rpx 12rpx;
  font-size: 1.125rem;
}

.service-item .address {
  padding: 6rpx 12rpx;
  font-size: small;
  color: rgba(0, 0, 0, 0.54);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.service-item .address .navigation {
  height: 48rpx;
  width: 48rpx;
  text-align: right;
  vertical-align: middle;
}

.service-item .expense {
  padding: 6rpx 12rpx;
  font-size: small;
  color: #e0620d;
}

.service-item .introduction {
  margin-top: 16rpx;
  padding: 6rpx 12rpx;
  line-height: 1.5;
  font-size: small;
  color: rgba(0, 0, 0, 0.87);
}

.action-container {
  margin: 48rpx 24rpx;
  display: flex;
  gap: 16rpx;
}

.action-container>.button {
  background-color: rgb(0, 206, 195);
  width: 100%;
  border: 0;
  border-radius: 48rpx;
  color: #fff;
}

.rule-container {
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 99999;
  top: 0;
  left: 0;
}

.rule {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.rule .title {
  font-weight: 400;
  line-height: 1.75;
  color: rgba(0, 0, 0, 0.87);
  padding: 24rpx;
  text-align: center;
}

.rule-content {
  background: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: left;
  position: relative;
}

.rule-action {
  padding: 24rpx;
}

.qrcode {
  margin: 1rem 0;
  text-align: center;
}

.card {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: calc(60vh);
  z-index: 1;
}

.card-header {
  font-size: large;
}

.card-content-text .time {
  font-weight: 500;
  font-size: 1.5rem;
  line-height: 1.5;
}