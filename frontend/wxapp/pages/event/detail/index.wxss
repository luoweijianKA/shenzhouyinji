page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
  background: rgb(0, 0, 0， 0.3);
}

.page-container {
  display: block;
  padding: 24rpx;
}

.event {
  height: auto;
}

.event-header .img {
  width: 100%;
  height: 30vh;
  border-radius: 0;
  margin: -24rpx -24rpx 0 -24rpx;
}

.event-container {
  margin-bottom: 56rpx;
  position: relative;
}

.title {
  padding-top: 24rpx;
  font-size: x-large;
}

.datetime {
  margin: 24rpx;
  font-size: x-small;
  color: #bbb;
}

.introduction {
  padding: 0;
  line-height: 1.5;
  text-indent: 2em;
  font-weight: 400;
  color: rgba(0, 0, 0， 0.87);
}