page {
  background-color: #f5f5f5;
}

.user-card {
  width: 100%;
  padding: 0 24rpx;
}

.ucc-header {
  margin-top: 192rpx;
  height: 96rpx;
  line-height: 48rpx;
  display: flex;
  align-items: center;
  color: #333;
  position: relative;
}

.ucc-header-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  overflow: hidden;
}

.ucc-header-name {
  font-size: 36rpx;
  line-height: 48rpx;
  color: #333;
  font-weight: bold;
  margin-left: 24rpx;
  margin-right: 16rpx;
  min-width: max-content;
}

.ucc-header-edit .icon {
  float: right;
}

.tweet-info {
  padding: 24rpx;
  border-radius: 16rpx 16rpx 0 0;
}

.ti-btn-group {
  width: 100%;
  height: auto;
  border-radius: 0 0 16rpx 16rpx;
}

.ti-btn-group .t-cell-group {
  width: calc(100vw - 48rpx);
}

.ti-btn-group .top {
  padding: 24rpx 18rpx 24rpx 32rpx;
  border-radius: 16rpx 16rpx 0 0;
}

.ti-btn-group .title {
  font-size: 32rpx;
  line-height: 48rpx;
  font-weight: bold;
}

.ti-btn-group .note {
  font-size: 28rpx;
}

.ti-btn-group .content {
  width: 100%;
  display: flex;
  border-radius: 0 0 16rpx 16rpx;
}

.ti-btn-group .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding: 36rpx;
  background-color: #fff;
}

.ti-btn-group .item:first-child {
  border-radius: 0 0 0 16rpx;
}

.ti-btn-group .item:last-child {
  border-radius: 0 0 16rpx 0;
}

.ti-btn-group .item-title {
  font-size: 24rpx;
  color: #666;
  line-height: 32rpx;
}

.ti-btn-group .item-icon {
  margin-bottom: 20rpx;
  width: 56rpx;
  height: 56rpx;
  position: relative;
}

.page-menu-container {
  min-height: calc(100vh - 500rpx);
}

.page-menu {
  margin: 24rpx;
}

.page-menu .left {
  margin-right: 0;
}

.page-menu .t-cell-padding {
  padding: 24rpx 18rpx 24rpx 32rpx;
}
.message-card {
  margin: 36rpx 22rpx 08rpx;
  padding: 32rpx 33rpx 44rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.card-title {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 28px;
  color: #333;
}
.msg-list {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.msg-item {
  margin-top: 40rpx;
  position: relative;
  width: 96rpx;
  text-align: center;
}
.msgitem-dot {
  position: absolute;
  top: -6rpx;
  right: 6rpx;
  width: 22rpx;
  height: 22rpx;
  box-sizing: border-box;
  border: 2rpx solid #ffffff;
  border-radius: 100%;
  background-color: #fd3535;
}
.msgitem-icon {
  width: 72rpx;
  height: 72rpx;
}
.msgitem-text {
  color: #666666;
  font-size: 24rpx;
  line-height: 28rpx;
}
