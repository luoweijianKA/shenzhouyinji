page {
  background-color: #f5f5f5;
}

.dividing {
  margin-left: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 10%;
  overflow: hidden;
  margin-right: 10rpx;
}

.icon-btn .t-button {
  color: #999;
  padding: 0rpx;
  border: none;
}

.block {
  background: #fff;
  color: #333;
  padding: 24rpx;
  border-radius: 16rpx;
  width: 80vw;
}

.edit-container .title {
  margin-bottom: 32rpx;
  font-size: large;
  color: #000;
}

.edit-container {
  border-bottom: 2rpx solid #ccc;
}

.input-placeholder {
  color: #ccc;
  font-size: small;
}

.button-group {
  margin-top: 56rpx;
  justify-content: center;
}

.btn-cancel .t-button--text {
  width: 100%;
  color: #333;
  font-size: small;
  text-decoration: underline;
}

.btn-save {
  background-color: #4286F3;
  border: #4286F3;
  font-size: small;
  color: #fff;
  padding: 8rpx;
}

.note {
  margin-top: 32rpx;
  color: red;
  font-size: small;
}