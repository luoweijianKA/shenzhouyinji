page {
  box-sizing: border-box;
  padding: 24rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 60rpx);
  background-color: rgb(0, 0, 0, 0.035);
}

.page-header,
.page-container {
  background: #fff;
  display: grid;
  gap: 16rpx;
  padding: 24rpx;
  height: auto;
}

.page-header {
  margin: -24rpx -24rpx 0 -24rpx;
}

.page-container {
  margin: 24rpx 0;
  border-radius: 20rpx;
}

.container-title {
  font-size: large;
  font-weight: 500;
  text-align: left;
  padding: 24rpx;
}

.p0 {
  padding: 0 !important;
}

.list {
  margin: 0;
}

.list .list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-decoration: none;
  width: 100%;
  box-sizing: border-box;
  padding: 24rpx 0;
  border-width: 0px 0px thin;
  border-style: solid;
  border-color: rgba(0, 0, 0, 0.12);
  color: rgba(0, 0, 0, 0.87);
}

.list .list-item:last-child {
  border: 0;
}

.list .list-item .label {
  color: rgba(0, 0, 0, 0.54);
}

.list-item-text {
  width: 100%;
  text-align: center;
}

.user-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #FFFFFF;
  padding: 24rpx;
}

.user {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 16rpx;
}

.user-name {
  font-size: large;
  font-weight: 500;
  line-height: 1.5;
  color: #333;
}

.event {
  height: auto;
  padding: 0;
}

.event-header {
  display: flex;
  height: 100rpx;
  justify-content: space-between;
  padding: 24rpx;
  padding-bottom: 0;
}

.event-header .title {
  display: flex;
  gap: 0.5rem;
  justify-content: flex-start;
}

.event-header .title>.img {
  height: 40px;
}

.event-header .action {
  display: flex;
  align-self: center;
  font-size: small;
  color: #bbb;
}

.event-header .action .t-icon {
  color: #bbb;
}

.event-content {
  padding: 24rpx;
}

.event-content:first-of-type {
  margin-top: 0;
}

.event-content .img {
  width: 100%;
  height: 300rpx;
  position: relative;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.event-content .event-header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  margin-top: -52px;
  padding: 24rpx;
  background-color: rgba(0, 0, 0, 0.25);
  color: #fff;
}

.event-content .event-header-title {
  color: #fff;
}

.event-content .event-header-action {
  font-size: small;
  display: flex;
  justify-content: flex-end;
}

.points {
  display: flex;
}

.points.list .list-item {
  width: 25%;
  border: 0;
  display: block;
  text-align: center;
  font-size: x-large;
}

.points.list .list-item .label {
  color: rgba(0, 0, 0, 0.54);
  margin-top: 8rpx;
  font-size: small;
}

.t-cell__note {
  color: rgba(0, 0, 0, 0.75);
  width: 100px;
  font-size: larger;
}