page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 180rpx);
}

.page-header {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  gap: 24rpx;
  background: #fff;
  padding: 0 24rpx;
}

.page-header .swiper-wrap {
  width: 100%;
}

.page-header .swiper-wrap .t-swiper {
  height: 144rpx;
}

.page-header .swiper-wrap .t-swiper .t-cell__title-text {
  color: #FF0000;
}

.page-header .swiper-wrap .t-swiper .t-cell__note {
  font-size: small;
  color: #4286F3;
}

.page-header .swiper-wrap .t-swiper .t-cell {
  padding: 24rpx;
}

.page-header .swiper-wrap .t-swiper .t-cell::after {
  border-bottom: none;
}

.page-container {
  background: #fff;
  display: block;
  padding: 0 24rpx;
  height: auto;
}

.title {
  font-size: x-large;
}

.dividing {
  height: 3rpx;
  width: 100%;
  background-color: rgba(187, 187, 187, 0.5);
  margin-top: 32rpx;
  margin-bottom: 16rpx;
}

.stack {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  gap: 16rpx;
  margin-left: 16rpx;
}

.popup-content {
  background-color: #fff;
  padding: 48rpx;
}

.popup-action {
  background-color: #fff;
  padding: 48rpx 48rpx 96rpx 48rpx;

}

.popup-action>.button {
  background-color: rgb(0, 206, 195);
  width: 100%;
  border: 0;
  border-radius: 48rpx;
  color: #fff;
}

.list {
  margin: 0;
  position: relative;
  width: 100%;
}

.list .list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  text-decoration: none;
  width: 100%;
  box-sizing: border-box;
  text-align: left;
  padding: 24rpx 0;
  border-width: 0px 0px thin;
  border-style: solid;
  border-color: rgba(0, 0, 0, 0.12);
  color: rgba(0, 0, 0, 0.87);
}

.list .list-item:last-child {
  border: 0;
}

.list .list-item .title {
  font-size: large;
  padding-bottom: 10rpx;
}

.list .list-item .label {
  color: rgba(0, 0, 0, 0.54);
}

.camp-list {
  margin-bottom: 96rpx;
}

.event {
  height: auto;
}

.event-header {
  display: flex;
  height: 100rpx;
  justify-content: space-between;
}

.event-header .title {
  display: flex;
  gap: 0.5rem;
  justify-content: flex-start;
}

.event-header .title>.img {
  height: 40px;
}

.event-header .action {
  display: flex;
  align-self: center;
  font-size: small;
  color: #bbb;
}

.event-header .action .t-icon {
  color: #bbb;
}

.event-container {
  position: relative;
}

.event-container .img {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  position: absolute;
}

.event-container .summary-container {
  display: flex;
  position: absolute;
  top: 200rpx;
  width: 100%;
  height: 100rpx;
  background-color: rgba(0, 0, 0, 0.35);
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  justify-content: space-between;
}

.event-container .summary-container .summary-title {
  color: #fff;
}

.event-container .summary-container .summary-footer {
  margin: 0;
  color: #fff;
  display: flex;
}

.scenicyspot {
  height: auto;
}

.scenicyspot-content {
  margin-top: 12px
}

.scenicyspot-content:first-of-type {
  margin-top: 0;
}

.scenicyspot-content .img {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
}

.scenicyspot-summary .img {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  position: relative;
}

.scenicyspot-summary .summary-container {
  display: flex;
  position: relative;
  margin-top: -52px;
  height: 48px;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.25);
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  justify-content: space-between;
}

.scenicyspot-summary .summary-container .summary-title {
  color: #fff;
  padding: 1rem;
}

.scenicyspot-summary .summary-container .summary-footer {
  color: #fff;
  display: flex;
  padding: 1rem;
  padding-right: 0.5rem;
}

.task-wrapper {
  margin-top: 24px;
}

.task {
  height: 48px;
  line-height: 48px;
  margin: 0 auto;
  width: 80%;
  background-color: rgba(0, 0, 0, 0.12);
  font-weight: 400;
  border-radius: 10px;
  text-align: center;
  color: #4b4b4b;
  font-size: 16px;
  margin-top: 8px;
}

.task.active {
  background-color: #2dc5c6;
  color: #ffffff;
  font-weight: 500;
}

.task.disabled {
  pointer-events: none;
}

.modal-box {
  position: absolute;
  width: 100%;
  height: 100vh;
  top: 0;
  overflow: hidden;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.75);
}

.modal-body {
  /* margin-top: 50%; */
}

.modal-content {
  color: #fff;
  padding: 24px;
}

.modal-content .img {
  width: 100%;
  border-radius: 10px;
}

.modal-content .hd {
  text-align: center;
  font-size: 16px;
  height: 90rpx;
  line-height: 90rpx;
  margin-bottom: 15px;
  border-bottom: 1px dashed #fff;
}

.modal-content .bd {
  text-align: left;
  font-size: 12px;
  text-indent: 2rem;
  line-height: 20px;
}

.modal-action {
  margin-top: 0;
  color: #fff;
}

.modal-action .submit {
  height: 40px;
  line-height: 40px;
  width: 300rpx;
  background-color: transparent;
  border: solid 1px #fff;
  border-radius: 10px;
  color: #fff;
}

.knowBtn {
  height: 40px;
  line-height: 40px;
  width: 300rpx;
  background: transparent;
  border: solid 1px #fff;
  border-radius: 10px;
  color: #fff;
}

.knowBtn::after {
  border: 0;
}

.knowBtn_on {
  background-color: fff;
  color: #000;
}

checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
}

.award {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: calc(50vh);
  z-index: 1;
}

.award .code {
  background-color: rgba(0, 0, 0, 0.13);
  font-size: xx-large;
  text-indent: 0.5em;
  letter-spacing: 0.5em;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  margin-bottom: 96px;
}

.card-header {
  font-size: large;
  margin-bottom: 16rpx;
}

.card-content-text .time {
  font-weight: 500;
  font-size: 1.5rem;
  line-height: 1.5;
}