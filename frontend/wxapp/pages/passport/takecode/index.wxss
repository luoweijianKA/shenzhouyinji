page {
  box-sizing: border-box;
  background: #fff;
}

.page-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: calc(100vh);
}

.page-container .time {
  font-weight: 500;
  font-size: larger;
  line-height: 1.5;
}

.page-container .qrcode {
  margin: 1rem 0;
  text-align: center;
}

.page-container .title {
  font-size: larger;
}

.event>.name {
  font-weight: 500;
  font-size: x-large;
  margin: 16rpx 0;
}