page {
  box-sizing: border-box;
}

.page-container {
  background: #fff;
}

.passport {
  width: 100%;
  height: 100vh;
}

.form {
  display: grid;
  gap: 0.5rem;
  padding: 24px;
}

.form .form-control {
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, 0.12);
  font-weight: 400;
  line-height: 1.5;
  color: rgba(0, 0, 0, 0.87);
  box-shadow: rgb(90 114 123 / 11%) 0px 7px 30px 0px;
  padding: 24rpx;
}

.form .form-action {
  margin-top: 1rem;
  background-color: #2dc5c6;
  border: 0;
  border-radius: 20rpx;
  color: #fff;
  width: 100%
}

.list {
  margin: 0px;
  padding: 0px 0px 8px;
  position: relative;
  width: 100%;
}

.list .list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  text-decoration: none;
  width: 100%;
  box-sizing: border-box;
  text-align: left;
  padding: 24rpx;
  border-width: 0px 0px thin;
  border-style: solid;
  border-color: rgba(0, 0, 0, 0.12);
  color: rgba(0, 0, 0, 0.87);
}

.list .list-item .label {
  color: rgba(0, 0, 0, 0.54);
}

.passport-code {
  padding: 0;
  /* position: relative; */
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.passport-code .form-control {
  width: 100%;
}

.passport-code .scan {
  width: 80rpx;
}