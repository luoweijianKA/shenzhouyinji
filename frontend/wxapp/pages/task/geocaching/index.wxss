page {
  box-sizing: border-box;
  background-color: rgb(0, 0, 0, 0.035);
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
}

.page-container {
  background: #fff;
  display: block;
  color: rgb(0, 0, 0, 0.87);
  transition: box-shadow 300ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
  box-shadow: none;
  overflow: hidden;
}

.page-container .img {
  height: 30vh;
}

.page-action {
  margin: 48rpx 24rpx;
  display: flex;
  gap: 16rpx;
}

.page-action>.button {
  background-color: rgb(0, 206, 195);
  width: 100%;
  border: 0;
  border-radius: 48rpx;
  color: #fff;
}

.map-container {
  width: 100%;
  height: 40vh;
}

.subtitle {
  margin: 0px;
  font-weight: 400;
  line-height: 1.75;
  color: rgba(0, 0, 0, 0.87);
}

.caption {
  margin: 0px;
  font-weight: 400;
  font-size: small;
  line-height: 1.66;
  color: rgb(119, 126, 137);
}

.card {
  margin: 12rpx 24rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.card-header>.title {
  margin: 0px;
  font-weight: 400;
  line-height: 1.5;
}

.card-content {
  padding: 0 0 24rpx 0;
}

.submit-button {
  margin-top: 48rpx;
  background-color: #2dc5c6;
  width: 60%;
  border: 0;
  border-radius: 20rpx;
  color: #fff;
}

.geocaching {
  margin: -24rpx;
  height: 80vh;
}

.geocaching .card-header {
  font-size: large;
  justify-content: center;
  align-items: center;
  padding: 24rpx;
}

.geocaching .card-content .text {
  font-size: medium;
  font-weight: 400;
}

.geocaching-media .video,
.geocaching-media .img {
  width: 100%;
}