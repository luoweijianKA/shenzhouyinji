page {
  box-sizing: border-box;
  background-color: rgb(0, 0, 0, 0.035);
  padding-bottom: calc(env(safe-area-inset-bottom) + 180rpx);
}

.page-container,
.page-header {
  background: #fff;
  display: block;
  margin: 24rpx;
  color: rgb(0, 0, 0, 0.87);
  transition: box-shadow 300ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
  border-radius: 20rpx;
  box-shadow: none;
  overflow: hidden;
}

.subtitle {
  margin: 0px;
  font-weight: 400;
  line-height: 1.75;
  color: rgba(0, 0, 0, 0.87);
}

.caption {
  margin: 0px;
  font-weight: 400;
  font-size: small;
  line-height: 1.66;
  color: rgb(119, 126, 137);
}


.list {
  margin: 0;
  position: relative;
  width: 100%;
}

.list .list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  text-decoration: none;
  width: 100%;
  box-sizing: border-box;
  text-align: left;
  padding: 24rpx;
  border-width: 0px 0px thin;
  border-style: solid;
  border-color: rgba(0, 0, 0, 0.12);
  color: rgba(0, 0, 0, 0.87);
}

.list .list-item:last-child {
  border: 0;
}

.list .list-item .label {
  color: rgba(0, 0, 0, 0.54);
}

.card {
  margin: 0;
}

.card-header {
  display: flex;
  align-items: center;
  padding: 48rpx;
}

.card-header>.title {
  margin: 0px;
  font-weight: 400;
  line-height: 1.5;
}

.card-content {
  padding: 24rpx;
  padding-top: 0;
}

.user-container {
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 48rpx;
}

.user {
  display: flex;
  justify-content: flex-start;
  gap: 16rpx;
}

.scenicyspot {
  height: auto;
}

.scenicyspot-content {
  width: 100%;
}

.scenicyspot-content:first-of-type {
  margin-top: 0;
}

.scenicyspot-content .img {
  width: 100%;
  height: 300rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.scenicyspot-summary .img {
  width: 100%;
  height: 300rpx;
  position: relative;
}

.scenicyspot-summary .summary-container {
  display: flex;
  position: relative;
  margin-top: -52px;
  height: 48px;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.25);
  justify-content: space-between;
}

.scenicyspot-summary .summary-container .summary-title {
  color: #fff;
  padding: 1rem;
}

.scenicyspot-summary .summary-container .summary-footer {
  font-size: small;
  color: #fff;
  display: flex;
  padding: 1rem;
  padding-right: 0.5rem;
}

.task {
  margin: 0;
}

.task>.caption {
  font-size: xx-small;
}


.action-container {
  margin: 48rpx 24rpx;
  display: flex;
  gap: 16rpx;
}

.action-container>.button {
  background-color: rgb(0, 206, 195);
  width: 100%;
  border: 0;
  border-radius: 48rpx;
  color: #fff;
}