page {
  box-sizing: border-box;
  background-color: rgb(0, 0, 0, 0.035);
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
}

.map-container {
  width: 100%;
  height: 40vh;
}

.action-container {
  margin: 48rpx 24rpx;
  display: flex;
  gap: 16rpx;
}

.action-container>.button {
  background-color: rgb(0, 206, 195);
  width: 100%;
  border: 0;
  border-radius: 48rpx;
  color: #fff;
}

.action-container>.button.end {
  background-color: rgb(255, 92, 142);
}

.page-container {
  background: #fff;
  display: block;
  margin: 24rpx;
  color: rgb(0, 0, 0, 0.87);
  transition: box-shadow 300ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
  border-radius: 20rpx;
  box-shadow: none;
  overflow: hidden;
}

.subtitle {
  margin: 0px;
  font-weight: 400;
  line-height: 1.75;
  color: rgba(0, 0, 0, 0.87);
}

.caption {
  margin: 0px;
  font-weight: 400;
  font-size: small;
  line-height: 1.66;
  color: rgb(119, 126, 137);
}


.list {
  margin: 0;
  position: relative;
  width: 100%;
}

.list .list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  text-decoration: none;
  width: 100%;
  box-sizing: border-box;
  text-align: left;
  padding: 24rpx;
  border-width: 0px 0px thin;
  border-style: solid;
  border-color: rgba(0, 0, 0, 0.12);
  color: rgba(0, 0, 0, 0.87);
}

.list .list-item:last-child {
  border: 0;
}

.list .list-item .label {
  color: rgba(0, 0, 0, 0.54);
}

.card {
  margin: 0;
}

.card-header {
  display: flex;
  align-items: center;
  padding: 48rpx;
}

.card-header>.title {
  margin: 0px;
  font-weight: 400;
  line-height: 1.5;
}

.card-content {
  padding: 24rpx;
  padding-top: 0;
}

.task-container {
  background: #fff;
  padding: 24rpx;
}

.task {
  margin: 0;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.task>.caption {
  font-size: small;
}

.task .card-content .text {
  font-size: medium;
  font-weight: 400;
}

.task-media .video,
.task-media .img {
  width: 100%;
}

.submit-button {
  margin-top: 48rpx;
  background-color: #2dc5c6;
  width: 60%;
  border: 0;
  border-radius: 20rpx;
  color: #fff;
}