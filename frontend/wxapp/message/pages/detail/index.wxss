page {
  background-color: #f5f5f5;
}

.page-container {
  margin: 24rpx;
  padding: 32rpx;
  height: calc(100vh - 120rpx);
  overflow-y: auto;
  background-color: #fff;
  border-radius: 16rpx;
  border: 1rpx solid rgba(204, 204, 204, 0.3)
}

.message-header {
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(204, 204, 204, 0.5);
}

.title {
  font-size: large;
}

.datetime {
  margin-top: 16rpx;
  font-size: x-small;
  color: #bbb;
}

.message-content {
  padding: 24rpx;
  line-height: 56rpx;
  font-size: medium;
  text-indent: 2em;
  color: rgba(0, 0, 0, 0.7);
}